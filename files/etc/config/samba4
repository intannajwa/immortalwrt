
config samba
	option workgroup 'WORKGROUP'
	option charset 'UTF-8'
	option description 'DOTYWRT'
	option interface 'lan'

config sambashare
	option auto '1'
	option name 'sda1'
	option path '/mnt/sda1'
	option read_only 'no'
	option guest_ok 'no'
	option create_mask '0666'
	option dir_mask '0777'
	option device 'sda1'
	option inherit_owner 'yes'

